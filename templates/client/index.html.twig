{% extends "base.html.twig" %}

{% block main %}
    <!-- Sidebar -->

     <div class="flex">
        <aside class="w-1/4 bg-gray-800 text-white p-4">
            <ul>
                <li class="mb-4"><a href="#" class="block p-2 hover:bg-gray-700">Dashboard</a></li>
                <li class="mb-4"><a href="#" class="block p-2 hover:bg-gray-700">Dettes</a></li>
                <li class="mb-4"><a href="{{path('clients.index')}}" class="block p-2 hover:bg-gray-700">Clients</a></li>
                <li class="mb-4"><a href="{{path('articles.index')}}" class="block p-2 hover:bg-gray-700">Articles</a></li>
                <li class="mb-4"><a href="#" class="block p-2 hover:bg-gray-700">Demandes</a></li>
                <li class="mb-4"><a href="#" class="block p-2 hover:bg-gray-700">Utilisateurs</a></li>
            </ul>
        </aside> 

        <!-- Main Content -->
        <div class="w-3/4 bg-white p-4 rounded shadow-md">
            <h2 class="text-lg font-bold mb-4">Lister Clients</h2>

            <!-- Filter Section -->
         <div class="mb-4 flex justify-end">
          <a href="{{path('clients.store')}}">  <button class="bg-blue-600 text-white px-4 py-2 rounded">Nouveau</button></a>
        </div>


            <!-- Clients Table -->
            <table class="w-full bg-white shadow-md rounded">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="p-2 text-left">PRENOM ET NOM</th>
                        <th class="p-2 text-left">TELEPHONE</th>
                        <th class="p-2 text-left">ADRESSE</th>
                        <th class="p-2 text-left">MONTANT DÛ</th>
                        <th class="p-2 text-left">ACTION</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in datas %}
                    <tr class="border-b">
                     <td class="p-2">
                    {% if client.surname %}
                       {{client.surname}} 
                    {% endif %}   
                    </td> 
                        <td class="p-2">{{client.telephon}}</td>
                        <td class="p-2">{{client.address}}</td>
                        <td class="p-2"><button class="bg-blue-600 text-white px-4 py-2 rounded">Détails</button></td>
                {% endfor %}
                </tbody>
            </table>
        
            <!-- Pagination -->
            <div class="flex justify-end mt-4">
                <button class="bg-gray-200 text-black px-3 py-1 rounded mr-2">&lt;</button>
                <button class="bg-gray-800 text-white px-3 py-1 rounded">1</button>
                <button class="bg-gray-200 text-black px-3 py-1 rounded">2</button>
                <button class="bg-gray-200 text-black px-3 py-1 rounded ml-2">&gt;</button>
            </div>
        </div>
    </div>
{% endblock %}
